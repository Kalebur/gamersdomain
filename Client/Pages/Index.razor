@page "/"
@page "/{CategoryName}"

@inject IProductService ProductService

<PageTitle>Gamers Domain</PageTitle>
<ShopNavMenu />
@if (CategoryName == null)
{
    <HeroProduct
        ProductName="Delta-3 Gaming PC"
        Description="Glorious gaming PC for the ages! GLORIOUS, I say!!" 
        ImageUrl="/images/computers/comp4.png"
        Price="1599"
    />
    <ProductList />
}
else
{
    <h3>@CategoryName.ToUpper()</h3>
    @UpdateProductListing()
    <ProductList Products="Products" />
}
